# Environment Configuration
NODE_ENV=production

# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=your_bot_username_without_@
GROUP_ID=your_telegram_group_id
TOPIC_ID=your_telegram_topic_id

# Admin Configuration
ADMIN_USER_ID=your_admin_telegram_user_id
ADMIN_USERNAME=your_admin_username_without_@

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kwh_bot?retryWrites=true&w=majority

# Webhook Configuration (Production)
WEBHOOK_URL=https://your-app-name.onrender.com/webhook
WEBHOOK_SECRET=your_webhook_secret_optional

# Keep-Alive Configuration (for free tier)
KEEP_ALIVE_URL=https://your-app-name.onrender.com

# API Configuration (optional)
ADMIN_API_TOKEN=your_admin_api_token_for_protected_endpoints

# Debug Configuration (optional)
DEBUG=false
LOG_LEVEL=info
